# Discord Bot Token
DISCORD_TOKEN=YOURT_TOKEN
# Bot Configuration
BOT_PREFIX=!
ADMIN_ROLE_ID=YOUR_ID

# Database Configuration
# Use 'sqlite' for local SQLite database or 'supabase' for cloud PostgreSQL
DATABASE_TYPE=sqlite
# SQLite database path (only used when DATABASE_TYPE=sqlite)
DATABASE_PATH=database/bot.db

# Supabase Configuration (only used when DATABASE_TYPE=supabase)
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log